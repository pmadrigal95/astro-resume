---
import Section from "../Section.astro"

import { certificates } from "@cv"
---

<Section title="Licenses & certifications">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        const endYear =
        date != null ? new Date(date).getFullYear() : "Present"
        const years = `${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{issuer}</h3>
                </div>

                <time style="padding-left: 48px">{years}</time>
              </header>

              <footer>
                <p>{name}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>